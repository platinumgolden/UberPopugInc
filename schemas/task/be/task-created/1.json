{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tasks.TaskCreated.v1",
  "description": "json schema for task created event)",
  "type": "object",
  "definitions": {
    "eventData": {
      "type": "object",
      "properties": {
        "publicId": {
          "type": "string",
          "format": "uuid",
          "description": "This is publicId of task"
        },
        "description": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "required": ["publicId", "description", "state"]
    }
  },
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "eventVersion": {
      "type": "number",
      "enum": [1]
    },
    "eventTime": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "eventName": {
      "type": "string"
    },
    "producer": {
      "type": "string"
    },

    "data": {
      "$ref": "#/definitions/eventData"
    }
  },
  "required": [
    "eventId",
    "eventVersion",
    "eventTime",
    "eventName",
    "producer",
    "data"
  ]
}
